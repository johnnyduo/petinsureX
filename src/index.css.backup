
@tailwind base;
@tailwind components;
@tailwind utilities;

/* PetInsureX Design System with Pet-Friendly Typography */

@layer base {
  :root {
    --background: 220 13% 18%;
    --foreground: 220 9% 98%;

    --card: 220 13% 16%;
    --card-foreground: 220  .aura-teal-prominent {
    .aura-teal-glow {
    box-shadow: 
      0 0 60px rgba(6, 182, 212, 0.30),
      0 15px 60px rgba(6, 182, 212, 0.25),
      0 0 0 1px rgba(6, 182, 212, 0.20),
      inset 0 1px 0 rgba(255, 255, 255, 0.35);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Removed aura-teal-glow hover effects for modal optimization */

  .aura-teal-intense {  0 0 40px rgba(6, 182, 212, 0.20),
      0 8px 40px rgba(6, 182, 212, 0.15),
      0 0 0 1px rgba(6, 182, 212, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Removed aura-teal-prominent hover effects for modal optimization */

  .aura-teal-glow {over: 220 13% 16%;
    --popover-foreground: 220 9% 98%;

    --primary: 173 58% 39%;
    --primary-foreground: 220 9% 98%;

    --secondary: 220 13% 21%;
    --secondary-foreground: 220 9% 98%;

    --muted: 220 13% 21%;
    --muted-foreground: 220 9% 60%;

    --accent: 220 13% 21%;
    --accent-foreground: 220 9% 98%;

    --destructive: 0 84% 60%;
    --destructive-foreground: 220 9% 98%;

    --border: 220 13% 28%;
    --input: 220 13% 21%;
    --ring: 173 58% 39%;

    --radius: 0.5rem;
  }

  /* Pet-Friendly Base Typography with Professional Sizing */
  body {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 15px; /* Base size for better readability */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1, 'pnum' 1, 'tnum' 0, 'onum' 1, 'lnum' 0, 'dlig' 0;
    font-variant-numeric: oldstyle-nums proportional-nums;
    letter-spacing: -0.01em;
    line-height: 1.5;
  }

  /* Headings with balanced, professional sizing */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Nunito', system-ui, sans-serif;
    font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1, 'dlig' 1;
    letter-spacing: -0.02em;
    line-height: 1.25;
    font-weight: 600;
  }

  h1 {
    font-size: clamp(1.875rem, 4vw, 2.5rem); /* 30px-40px balanced */
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  h2 {
    font-size: clamp(1.5rem, 3vw, 1.875rem); /* 24px-30px balanced */
    font-weight: 600;
  }

  h3 {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem); /* 20px-24px balanced */
    font-weight: 600;
  }

  /* Navigation and UI text sizing */
  .text-nav {
    font-size: 14px;
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .text-ui {
    font-size: 13px;
    font-weight: 500;
  }

  /* Button text sizing */
  .text-button {
    font-size: 14px;
    font-weight: 500;
    letter-spacing: -0.005em;
  }

  /* Pet-friendly button styling */
  button {
    font-family: 'Nunito', system-ui, sans-serif;
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  /* Brand elements use Comfortaa */
  .brand-text {
    font-family: 'Comfortaa', system-ui, sans-serif;
  }
}

@layer components {
  /* Professional Typography Components */
  .text-pet-friendly {
    font-family: 'Nunito', system-ui, sans-serif;
    font-size: 15px;
    font-weight: 500;
    line-height: 1.5;
    letter-spacing: -0.01em;
  }

  .text-brand {
    font-family: 'Comfortaa', system-ui, sans-serif;
    font-size: 16px;
    font-weight: 600;
    letter-spacing: -0.015em;
  }

  .text-display {
    font-family: 'Nunito', system-ui, sans-serif;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  .text-body-friendly {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 15px;
    font-weight: 400;
    line-height: 1.5;
    letter-spacing: -0.005em;
  }

  /* Navigation-specific typography */
  .text-nav-item {
    font-family: 'Nunito', system-ui, sans-serif;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .text-nav-brand {
    font-family: 'Comfortaa', system-ui, sans-serif;
    font-size: 18px;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  /* Button typography balanced */
  .text-button-sm {
    font-size: 13px;
    font-weight: 500;
  }

  .text-button-md {
    font-size: 14px;
    font-weight: 500;
  }

  .text-button-lg {
    font-size: 15px;
    font-weight: 600;
  }

  /* Light mode optimized for pet insurance */
  .light {
    --background: 0 0% 100%;
    --foreground: 220 13% 9%;

    --card: 0 0% 100%;
    --card-foreground: 220 13% 9%;

    --popover: 0 0% 100%;
    --popover-foreground: 220 13% 9%;

    --primary: 173 58% 39%;
    --primary-foreground: 0 0% 98%;

    --secondary: 220 13% 96%;
    --secondary-foreground: 220 13% 9%;

    --muted: 220 13% 96%;
    --muted-foreground: 220 9% 45%;

    --accent: 220 13% 96%;
    --accent-foreground: 220 13% 9%;

    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 98%;

    --border: 220 13% 91%;
    --input: 220 13% 91%;
    --ring: 173 58% 39%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-gradient-to-br from-slate-50 via-white to-teal-50/30 text-foreground min-h-screen;
    font-feature-settings: "rlig" 1, "calt" 1;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    @apply bg-transparent;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-petinsure-teal-300 rounded-full;
  }

  ::-webkit-scrollbar-thumb:hover {
    @apply bg-petinsure-teal-400;
  }
}

@layer components {
  /* Glass morphism components with improved borders and teal aura effects */
  .glass-container {
    @apply backdrop-blur-glass bg-gradient-glass border border-petinsure-teal-200/40 rounded-2xl shadow-glass;
    background: linear-gradient(
      135deg, 
      rgba(255, 255, 255, 0.25) 0%, 
      rgba(255, 255, 255, 0.18) 50%,
      rgba(255, 255, 255, 0.15) 100%
    );
  }

  /* Removed glass-container hover effects for modal optimization */

  /* Teal Aura/Glow Effects - Enhanced Intensity */
  .aura-teal-subtle {
    box-shadow: 
      0 0 25px rgba(6, 182, 212, 0.12),
      0 4px 25px rgba(6, 182, 212, 0.08),
      0 0 0 1px rgba(6, 182, 212, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Removed aura-teal-subtle hover effects for modal optimization */

  .aura-teal-prominent {
    box-shadow: 
      0 0 30px rgba(6, 182, 212, 0.18),
      0 8px 30px rgba(6, 182, 212, 0.1),
      0 0 0 1px rgba(6, 182, 212, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Removed aura-teal-prominent hover effects for modal optimization */

  .aura-teal-glow {
    box-shadow: 
      0 0 40px rgba(6, 182, 212, 0.22),
      0 10px 40px rgba(6, 182, 212, 0.12),
      0 0 0 1px rgba(6, 182, 212, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Removed aura-teal-glow hover effects for modal optimization */

    .aura-teal-intense {
    box-shadow: 
      0 0 100px rgba(6, 182, 212, 0.45),
      0 25px 100px rgba(6, 182, 212, 0.40),
      0 0 0 1px rgba(6, 182, 212, 0.30),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Removed aura-teal-intense hover effects for modal optimization */

/* Pet Insurance Card Styles */

  /* Pet-themed buttons - hover effects disabled for modal usage */
  .btn-paw-primary {
    @apply paw-button text-white font-medium px-6 py-3 flex items-center gap-2 transition-all duration-200;
  }

  .btn-paw-secondary {
    @apply glass-container text-petinsure-teal-700 font-medium px-6 py-3 min-h-[44px] rounded-full flex items-center gap-2 transition-all duration-200;
  }

  .btn-paw-ghost {
    @apply text-petinsure-teal-600 font-medium px-6 py-3 min-h-[44px] rounded-full flex items-center gap-2 transition-all duration-200;
  }

  /* Animation classes */
  .animate-paw-print {
    animation: paw-bounce 0.6s ease-in-out;
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease-in-out infinite;
  }

  /* Pet insurance specific styles */
  .pet-card {
    @apply glass-container p-6 transition-all duration-300 cursor-pointer;
  }

  .risk-gauge-low {
    @apply text-green-600 bg-green-50 border-green-200;
  }

  .risk-gauge-medium {
    @apply text-yellow-600 bg-yellow-50 border-yellow-200;
  }

  .risk-gauge-high {
    @apply text-red-600 bg-red-50 border-red-200;
  }

  /* Form enhancements */
  .form-field {
    @apply glass-container p-4 border-0 focus:ring-2 focus:ring-petinsure-teal-400 focus:border-transparent transition-all duration-200;
  }

  /* Status indicators */
  .status-pending {
    @apply bg-yellow-100 text-yellow-800 border-yellow-200;
  }

  .status-approved {
    @apply bg-green-100 text-green-800 border-green-200;
  }

  .status-rejected {
    @apply bg-red-100 text-red-800 border-red-200;
  }

  .status-review {
    @apply bg-blue-100 text-blue-800 border-blue-200;
  }

  /* Loading states */
  .loading-shimmer {
    @apply animate-pulse bg-gradient-to-r from-gray-200 via-gray-300 to-gray-200 bg-[length:200%_100%];
    animation: shimmer 1.5s infinite;
  }

  /* Chat specific styles for AI Assistant */
  .chat-message-enter {
    animation: message-slide-in 0.3s ease-out;
  }

  .chat-typing-indicator {
    animation: typing-pulse 1.5s infinite;
  }

  .modal-backdrop-glass {
    @apply backdrop-blur-glass bg-black/20;
    transition: all 0.2s ease-out;
  }

  .modal-content-glass {
    @apply glass-card;
    animation: modal-scale-in 0.2s ease-out;
  }

  /* Keyframe animations */
  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  @keyframes paw-bounce {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes message-slide-in {
    0% { 
      opacity: 0; 
      transform: translateY(20px) scale(0.95); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0) scale(1); 
    }
  }

  @keyframes typing-pulse {
    0%, 60%, 100% { opacity: 0.3; }
    30% { opacity: 1; }
  }

  @keyframes modal-scale-in {
    0% { 
      opacity: 0; 
      transform: scale(0.95) translateY(-10px); 
    }
    100% { 
      opacity: 1; 
      transform: scale(1) translateY(0); 
    }
  }

  /* Custom scrollbar for modal content */
  .custom-scrollbar {
    scrollbar-width: thin;
    scrollbar-color: rgba(6, 182, 212, 0.3) rgba(6, 182, 212, 0.1);
  }

  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(6, 182, 212, 0.05);
    border-radius: 3px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(6, 182, 212, 0.3);
    border-radius: 3px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(6, 182, 212, 0.5);
  }

  /* Mobile modal overflow prevention */
  .modal-container {
    max-width: 100vw !important;
    max-height: 100vh !important;
    overflow: hidden;
  }
  
  /* Ensure body doesn't scroll horizontally when modal is open */
  body[data-modal-open="true"] {
    overflow: hidden !important;
    position: fixed !important;
    width: 100% !important;
  }

  /* Modal rounded corners enhancement */
  .modal-container .glass-card {
    border-radius: 1rem !important;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 
                0 0 0 1px rgba(255, 255, 255, 0.05),
                0 0 30px rgba(6, 182, 212, 0.1) !important;
  }

  /* Ensure Quick Claim button is properly layered */
  .quick-claim-floating {
    z-index: 40;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .quick-claim-floating.hidden {
    opacity: 0;
    transform: scale(0.75) translateY(10px);
    pointer-events: none;
  }
}
